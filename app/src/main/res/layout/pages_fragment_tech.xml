<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tech_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CEE8E8" tools:context=".pages.TechFragment">

    <TextView
        android:id="@+id/tech_title"
        android:layout_width="fill_parent"
        android:layout_height="46dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:text="Electronics"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#FFFFFF"
        android:translationZ="2dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/settings_header_background2"
        android:layout_width="435dp"
        android:layout_height="281dp"
        android:layout_marginBottom="700dp"
        android:src="@drawable/header_background"
        android:translationZ="1dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tech_amount"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/poppins_light"
        android:gravity="center"
        android:text="Number of Items: {number}"
        android:textColor="#FFFFFF"
        android:translationZ="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/overview"
        android:layout_width="368dp"
        android:layout_height="98dp"
        android:layout_marginTop="96dp"
        android:scaleType="centerInside"
        android:src="@drawable/overview"
        android:translationZ="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/television"
        android:layout_width="375dp"
        android:layout_height="85dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/television"
        android:translationZ="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/overview" />

    <ImageButton
        android:id="@+id/laptop"
        android:layout_width="375dp"
        android:layout_height="85dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/laptop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/television" />

    <ImageButton
        android:id="@+id/vacuum"
        android:layout_width="375dp"
        android:layout_height="85dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/vacuum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/laptop" />

    <ImageButton
        android:id="@+id/microwave"
        android:layout_width="375dp"
        android:layout_height="85dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/microwave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vacuum" />

    <ImageButton
        android:id="@+id/lightbulbs"
        android:layout_width="375dp"
        android:layout_height="85dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/lightbulbs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/microwave" />

    <ImageButton
        android:id="@+id/acunt"
        android:layout_width="375dp"
        android:layout_height="85dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/acunit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lightbulbs" />
</androidx.constraintlayout.widget.ConstraintLayout>